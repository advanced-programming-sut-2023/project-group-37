<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.menus.ChangePasswordMenu">
    <children>
        <TextField alignment="CENTER" layoutX="175.0" layoutY="200.0" prefHeight="30.0" prefWidth="207.0"
                   promptText="new password" fx:id="newPassword"/>
        <TextField alignment="CENTER" layoutX="174.0" layoutY="145.0" prefHeight="30.0" prefWidth="207.0"
                   promptText="old password" fx:id="oldPassword"/>
        <Label layoutX="24.0" layoutY="144.0" prefHeight="30.0" prefWidth="122.0" text="Old Password:" textFill="WHITE">
            <font>
                <Font name="Segoe Print" size="15.0"/>
            </font>
        </Label>
        <Label layoutX="21.0" layoutY="200.0" prefHeight="30.0" prefWidth="122.0" text="New Password:" textFill="WHITE">
            <font>
                <Font name="Segoe Print" size="15.0"/>
            </font>
        </Label>
        <Label layoutX="417.0" layoutY="200.0" prefHeight="30.0" prefWidth="138.0" textFill="RED" fx:id="errorLabel">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button layoutX="437.0" layoutY="145.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="70.0"
                stylesheets="@../CSS/style.css" text="Change" onMouseClicked="#changePassword"/>
    </children>
</AnchorPane>
